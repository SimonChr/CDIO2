import java.util.Scanner;

public class Ui {
public static boolean konto3000=false;
	public static void main (String [] agrs) {

		Dice dice = new Dice();
		Scanner scan = new Scanner(System.in); 
		Spiller spil = new Spiller();

		int kast1 = 0;
		int kast2 = 0; 

		//	Spillet starter: 	
		System.out.println("Velkommen \nHvor mange spillere er i?");
		int bruger = scan.nextInt(); 
		

		spil.spiller(bruger);

		System.out.println("Lad spillet begynde. \n" + spil.hentNavn(0) + " starter:");

	//while (konto3000=false){ // Henter pengebeholdning fra konto
		

		for (int j = 0; j < bruger; j++) {
			int sum = 0; 
			for (int n = 0; n < 1; n++) {
				dice.roll();
				kast1 = dice.getFaceValue();
				dice.roll();
				kast2 = dice.getFaceValue();
				sum=kast1+kast2;
				
				System.out.println(  Felter.felttekst(sum));
				System.out.println( spil.hentNavn(j) + " landte på " + Felter.feltNavn(sum) + 		//player.name(j) skal rettes så den passer med 
						" & din penge beholdning ændres med " + Felter.feltVærdi(sum)) ;			//player classen. 
				System.out.println("");
				
				Konto.setPengebeholdning(Felter.feltVærdi(sum), j);
				System.out.println(spil.hentNavn(j) + "'s pengebeholdning er nu " + Konto.Pengebeholdning.get(j));
				

				if (sum == 10){
					n = -1;
				} 	//Ekstra tur ved vareulvemur.	
			}
		//}
		
	}
		scan.close();
	}
}
